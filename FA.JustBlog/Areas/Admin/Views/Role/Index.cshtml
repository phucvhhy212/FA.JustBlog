
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Microsoft.AspNetCore.Identity.IdentityRole>
<h1 class="mt-4">Manage Role</h1>
<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAdd">Add New</button>
<div class="card my-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Roles List
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            
            </tfoot>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <!--Modal trigger-->
                        <a data-toggle="modal" data-target="#modalEdit" class='sidebar-link clicking' data-id="@item.Id" data-name="@item.Name">
                            <i class="fa fa-pencil"></i>
                        </a>
                        &nbsp;
                        <a data-toggle="modal" data-target="#modalView" class='sidebar-link clickingView' data-id="@item.Id" data-name="@item.Name" data-stamp="@item.ConcurrencyStamp">

                            <i class="fa fa-eye"></i>
                        </a>
                            

                        <!-- End Modal trigger -->
                    </td>

                </tr>

            }


            </tbody>
        </table>
    </div>
</div>

<div class="modal hide fade" id="modalEdit">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form action="@Url.Action("Edit","Role",new{area="Admin"})" method="POST" enctype="multipart/form-data" id="edit-form">
                <input type="hidden" id="id" name="id">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Edit Role</h4>
                    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name" class="col-form-label">Role Name:</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

                        
<div class="modal hide fade" id="modalView">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">


            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Role Information</h4>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="title" class="col-form-label">Id:</label>
                    <input type="text" class="form-control" id="idV" disabled>
                </div>
                <div class="form-group">
                    <label for="title" class="col-form-label">Name:</label>
                    <input type="text" class="form-control" id="nameV" disabled>
                </div>
                <div class="form-group">
                    <label for="category" class="col-form-label">Concurrency Stamp:</label>
                    <input type="text" class="form-control" id="stampV" disabled>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<div class="modal hide fade" id="modalAdd">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">


            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add a new role</h4>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <form action="@Url.Action("Add","Role",new{area="Admin"})" method="POST" enctype="multipart/form-data" id="add-form">

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nameA" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="nameA" name="name">
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </form>

        </div>
    </div>
</div>