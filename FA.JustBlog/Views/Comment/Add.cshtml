@model FA.JustBlog.Core.Models.Comment
@{
    Layout = "";
}
<div class="d-flex flex-start">
    <div>
        <h4 class="fw-bold mb-1">@Model.Name</h4>
        <div class="d-flex align-items-center mb-3">
            <p class="mb-0 mt-3">
                @Model.CommentTime
            </p>
        </div>
        <h6 class="mb-0 mt-3">
            @Model.CommentHeader
        </h6>
        <p class="mb-0 mt-3">
            @Model.CommentText
        </p>
    </div>
</div>
<hr class="my-2" />
