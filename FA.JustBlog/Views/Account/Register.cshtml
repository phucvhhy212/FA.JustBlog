

@{
    ViewData["Title"] = "Register";
    Layout = "";
}
@model List<Microsoft.AspNetCore.Authentication.AuthenticationScheme>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0beab2041e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!--JQuery-->
    <script src="https://code.jquery.com/jquery-3.6.4.js"
            integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E="
            crossorigin="anonymous"></script>
    <!--JQuery Validation-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/validation.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <style>
        .bg-image-vertical {
            position: relative;
            overflow: hidden;
            background-repeat: no-repeat;
            background-position: right center;
            background-size: auto 100%;
        }

        @@media (min-width: 1025px) {
            .h-custom-2 {
                height: 100%;
            }
        }
    </style>
</head>

<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="px-5 ms-xl-4">
                        <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <span class="h1 fw-bold mb-0">Just Blog</span>
                    </div>

                    <div class="d-flex align-items-center px-5 ms-xl-4 mt-2 pt-3 pt-xl-0 mt-xl-n5">

                        <form style="width: 23rem;" asp-action="Register" asp-controller="Account" id="register-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <h3 class="fw-normal mb-2 pb-2" style="letter-spacing: 1px;">Register</h3>
                            <h3 class="text-danger">@ViewBag.Error</h3>
                            <div class="form-outline mb-2">
                                <label for="UserName" class="control-label">Username:</label>
                                <input type="text" id="UserName" class="form-control form-control-lg" name="username"/>
                            </div>
                            
                            <div class="form-outline mb-2">
                                <label for="Email" class="control-label">Email:</label>
                                <input type="email" id="Email" class="form-control form-control-lg" name="email" />
                            </div>
                            
                            <div class="form-outline mb-2">
                                <label for="Phone" class="control-label">Phone Number:</label>
                                <input type="text" id="Phone" class="form-control form-control-lg" name="phone" />
                            </div>

                            <div class="form-outline mb-2">
                                <label for="password" class="control-label">Password:</label>
                                <input type="password" id="password" class="form-control form-control-lg" name="password" />
                            </div>

                            <div class="form-outline mb-2">
                                <label for="Repassword" class="control-label">Re-password:</label>
                                <input type="password" id="Repassword" class="form-control form-control-lg" name="repassword" />
                            </div>

                            <div class="pt-3 mb-3">
                                <input type="submit" value="Register" class="btn btn-info btn-lg btn-block" />
                            </div>
                            <h3 class="fw-normal mb-3" style="letter-spacing: 1px;">or</h3>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                                    <a href="#" class="btn btn-primary facebook"> <span>Login with Facebook</span> <i class="fa fa-facebook"></i> </a>
                                </div>
                                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                                    <a href="#" class="btn btn-danger google-plus"> Login  with Google <i class="fa fa-google-plus"></i> </a>
                                </div>
                            </div>
                            <p class="small mb-2 pb-lg-2"><a class="text-muted" href="@Url.Action("Index","Home")">Back to Home</a></p>
                            <p>Already registered? <a href="@Url.Action("Login","Account")" class="link-info">Sign In!</a></p>

                        </form>

                    </div>

                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                         alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>
</body>

</html>

